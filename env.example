# Turso Database
# Obtener de: turso db show findmi --url
TURSO_DATABASE_URL="libsql://your-database.turso.io"
# Obtener de: turso db tokens create findmi
TURSO_AUTH_TOKEN="your-auth-token"

# Better Auth
# Generar con: openssl rand -base64 32
BETTER_AUTH_SECRET="your-secret-key-here"
# En producción usar la URL de Vercel: https://tu-app.vercel.app
BETTER_AUTH_URL="http://localhost:3000"

# App URL (para el cliente de auth)
# En producción usar la URL de Vercel: https://tu-app.vercel.app
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# Google OAuth (opcional si no usas Google login)
# Obtener de: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# Cloudinary (para imágenes)
# Obtener de: https://console.cloudinary.com/settings/api-keys
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your-cloud-name"
CLOUDINARY_API_KEY="your-api-key"
CLOUDINARY_API_SECRET="your-api-secret"
